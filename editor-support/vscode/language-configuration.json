{
  "comments": {
    "lineComment": "//"
  },
  "brackets": [
    ["{", "}"],
    ["[", "]"],
    ["(", ")"]
  ],
  "autoClosingPairs": [
    ["{", "}"],
    ["[", "]"],
    ["(", ")"],
    ["\"", "\""],
    ["'", "'"]
  ],
  "surroundingPairs": [
    ["{", "}"],
    ["[", "]"],
    ["(", ")"],
    ["\"", "\""],
    ["'", "'"]
  ],
  "indentationRules": {
    "increaseIndentPattern": "^.*(\\{|yedi\\s+.*bhane)\\s*$",
    "decreaseIndentPattern": "^\\s*(\\}|natra).*$"
  },
  "wordPattern": "[a-zA-Z_][a-zA-Z0-9_]*",
  "onEnterRules": [
    {
      "beforeText": "\\{\\s*$",
      "action": { "indent": "indent" }
    },
    {
      "beforeText": "^\\s*yedi\\s+.*bhane\\s*$",
      "action": { "indent": "indent" }
    }
  ],
  "folding": {
    "markers": {
      "start": "^\\s*//\\s*#?region\\b",
      "end": "^\\s*//\\s*#?endregion\\b"
    },
    "offSide": true
  }
}